{% if edition.thumbnail %}
{% set mtb = akso_magazine_cover_path ~ '?m=' ~ magazine.id ~ '&e=' ~ edition.id ~ '&s=' %}
<div class="magazine-cover-container">
    <img
        alt="{{magazine.name}} - {{edition.idHuman}}"
        class="magazine-cover"
        src="{{mtb}}256px"
        srcset="{{mtb}}256px 1x, {{mtb}}512px 2x" />
</div>
{% else %}
<div class="magazine-cover-container has-no-thumbnail">
    <div class="th-inner">
        <div class="th-title">{{magazine.name}}</div>
        <div class="th-subtitle">{{edition.idHuman}}</div>
    </div>
</div>
{% endif %}
