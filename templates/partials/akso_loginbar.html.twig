<div class="akso-bridge-login-bar {{ akso_auth ? 'is-logged-in' : 'is-logged-out' }}">
    {% if akso_auth %}
        <div class="akso-user">
            {{ akso_user_fmt_name|e }}
        </div>
        <a class="link-button" href="{{ config.plugins['akso-bridge'].logout_path|e('html_attr') }}">
            {{ config.plugins['akso-bridge'].logout_label|e }}
        </a>
    {% else %}
        <a class="link-button" href="{{ config.plugins['akso-bridge'].login_path|e('html_attr') }}">
            {{ config.plugins['akso-bridge'].login_label|e }}
        </a>
    {% endif %}
</div>
